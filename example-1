public class Calculator {

    // Method to add two numbers
    public int add(int a, int b) {
        return a + b;
    }

    // Method to subtract the second number from the first number
    public int subtract(int a, int b) {
        return a - b;
    }

    // Method to multiply two numbers
    public int multiply(int a, int b) {
        return a * b;
    }

    // Method to divide the first number by the second number
    public int divide(int a, int b) {
        // Check if the divisor is zero to avoid ArithmeticException
        if (b == 0) {
            throw new ArithmeticException("Cannot divide by zero");
        }
        return a / b;
    }

    public static void main(String[] args) {
        Calculator calculator = new Calculator();

        // Test the add method
        System.out.println(calculator.add(10, 5)); // Output: 15

        // Test the subtract method
        System.out.println(calculator.subtract(10, 5)); // Output: 5

        // Test the multiply method
        System.out.println(calculator.multiply(10, 5)); // Output: 50

        // Test the divide method
        System.out.println(calculator.divide(10, 5)); // Output: 2
    }
}
